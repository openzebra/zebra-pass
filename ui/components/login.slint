            },
            {
                title: "Authenticator key (TOTP)",
                value: "",
                hide: false,
                copy: false
            },
        ],
        extra_fields: []
    };

    VerticalLayout {
        spacing: 5pt;
        RecordField {
            height: 40pt;
            background: Theme.primary;
            read-only: root.read-only;
            label: @tr("Name");
            value: "";
        }
        RecordField {
            height: 40pt;
            background: Theme.primary;
            read-only: root.read-only;
            label: @tr("website");
            value: "";
