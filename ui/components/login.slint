export component EditLogin {
    in property <bool> read-only;
    in-out property <Element> element : {
        name: "",
        website: "",
        icon: @image-url("../images/add.svg"),
        type: 0,
        favourite: false,
        created: "",
        updated: "",
        fields: [
            {
                title: "Username",
                value: "",
                hide: false,
                copy: false
            },
            {
                title: "Password",
