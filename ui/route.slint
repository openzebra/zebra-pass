import { Button, VerticalBox } from "std-widgets.slint";

import { LockPage, StartPage, LangChoosePage } from "./pages/pages.slint";
import { Routers } from "./routers.slint";

export component Route inherits Window {
    in-out property<Routers> route: Routers.Lock;

    if(root.route == Routers.Lock) : LockPage {}
    if(root.route == Routers.Start) : StartPage {}
    if(root.route == Routers.LangChoose) : LangChoosePage {
        continue(new-route) => {
            root.route = new-route;
        }
    }
}
